<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.myapplication.activity.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="269dp"
        android:layout_height="242dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="65dp"
        app:layout_constraintBottom_toTopOf="@+id/tvname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo9" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="230dp"
        android:layout_height="72dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="ChatLingual"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivlogo" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="9dp"
        android:fontFamily="casual"
        android:text="Contact Us- divyanganakothari1996@gmail.com"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
